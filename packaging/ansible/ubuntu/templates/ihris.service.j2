[Unit]
Description=iHRIS
Documentation=https://ihris.org
After=network.target

[Service]
Type=simple
WorkingDirectory=/var/lib/iHRIS/ihris-backend
ExecStart={{node_path.stdout}} /var/lib/iHRIS/ihris-backend/{{site}}/bin/www
Restart=always
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target